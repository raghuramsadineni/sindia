---
import AboutUs from "../components/AboutUs.astro";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
import GallerySection from "../components/GallerySection.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import MenuSection from "../components/MenuSection.astro";
import ReviewsSection from "../components/ReviewsSection.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Experience authentic Indian cuisine at Sindia in Sienna, Italy. Enjoy a variety of traditional dishes made with fresh ingredients."
    />
    <meta
      name="keywords"
      content="Indian Restaurant, Indian Cuisine, Sienna, Sindia, Authentic Food"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/assets/logo.jpg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&family=Poppins:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <title>Sindia - Authentic Indian Cuisine</title>
  </head>
  <body>
    <Header />
    <Hero />
    <AboutUs />
    <MenuSection />
    <GallerySection />
    <ReviewsSection />
    <ContactSection />
    <Footer />
  </body>
</html>
