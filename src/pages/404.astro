---
import Layout from "../layout/Layout.astro";
---

<Layout >
  <meta http-equiv="refresh" content="0;url=/" />
  <div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg text-center">
      <h1 class="text-5xl font-bold text-blue-600 mb-4">404</h1>
      <p class="text-xl text-gray-700 mb-6">
        Whoops! We couldn't find the page you're looking for.
      </p>
      <a
        href="/"
        class="px-6 py-3 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600 transition-colors"
      >
        Go to Homepage
      </a>
    </div>
  </div>
</Layout>
