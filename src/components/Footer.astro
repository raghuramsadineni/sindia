---
import { getLangFromUrl, useTranslatedPath, useTranslations } from "../i18n/utils";

// Determine the language from the URL
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang); // t function to retrieve translations
const translatePath = useTranslatedPath(lang);
---

<footer class="py-8 px-6 bg-gray-800 text-white text-center">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h2 class="font-heading text-3xl mb-4">{t("footer.title")}</h2>
      <p class="font-body text-lg">{t("footer.subtitle")}</p>
    </div>
    <nav class="flex justify-center space-x-6 mb-8">
      <a href="#home" class="hover:underline">{t("footer.nav.home")}</a>
      <a href="#menu" class="hover:underline">{t("footer.nav.menu")}</a>
      <a href="#gallery" class="hover:underline">{t("footer.nav.gallery")}</a>
      <a href="#about" class="hover:underline">{t("footer.nav.about")}</a>
      <a href="#reviews" class="hover:underline">{t("footer.nav.reviews")}</a>
      <a href="#contact" class="hover:underline">{t("footer.nav.contact")}</a>
      <a href={translatePath("/signin")} class="hover:underline">{t("footer.nav.admin")}</a>
    </nav>
  </div>
  <p class="font-body text-sm">
    {t("footer.rights")}
  </p>
</footer>
