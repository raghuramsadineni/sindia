---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang); // Get translation function based on the selected language
---

<section id="gallery" class="py-16 px-6 bg-white text-gray-800 text-center">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-heading mb-8">{t("gallery.title")}</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <img
        src="/assets/dish1.jpg"
        alt={t("gallery.altText.dish1")}
        class="w-full h-auto rounded-lg shadow-md"
      />
      <img
        src="/assets/dish2.jpg"
        alt={t("gallery.altText.dish2")}
        class="w-full h-auto rounded-lg shadow-md"
      />
      <img
        src="/assets/dish3.jpg"
        alt={t("gallery.altText.dish3")}
        class="w-full h-auto rounded-lg shadow-md"
      />
      <img
        src="/assets/dish4.jpg"
        alt={t("gallery.altText.dish4")}
        class="w-full h-auto rounded-lg shadow-md"
      />
      <img
        src="/assets/dish5.jpg"
        alt={t("gallery.altText.dish5")}
        class="w-full h-auto rounded-lg shadow-md"
      />
      <img
        src="/assets/dish6.jpg"
        alt={t("gallery.altText.dish6")}
        class="w-full h-auto rounded-lg shadow-md"
      />
    </div>
  </div>
</section>
