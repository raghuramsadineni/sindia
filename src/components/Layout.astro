---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Logo from "../assets/Logo.jpg";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={t("meta.description")} />
    <meta
      name="keywords"
      content="Indian Restaurant, Indian Cuisine, Sienna, Sindia, Authentic Food"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={Logo.src} />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&family=Poppins:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <title>{t("meta.title")}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
