---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang); // Get translation function based on the selected language
---

<section id="reviews" class="py-16 px-6 bg-yellow-50 text-gray-800 text-center">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-heading mb-8">{t("reviews.title")}</h2>
    <div class="space-y-8">
      {
        t("reviews.feedback").map((review: any) => (
          <blockquote class="p-6 bg-white rounded-lg shadow-md">
            <p class="font-body text-lg md:text-xl leading-relaxed">
              "{review.text}"
            </p>
            <footer class="mt-4 font-body text-primary">{review.author}</footer>
          </blockquote>
        ))
      }
    </div>
  </div>
</section>
